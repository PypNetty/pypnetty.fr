---
interface Props {
  title?: string;
  badge?: string;
  app?: string;
  status?: string;
  impact?: string;
  cause?: string;
}

const {
  title = "SYSTEM_ALERT // CRITICAL_EVENT",
  badge = "L1_INCIDENT",
  app = "Unknown",
  status = "Unknown",
  impact = "CRITICAL",
  cause = "Unknown",
} = Astro.props;
---

<div
  class="my-8 border border-red-500/50 rounded-lg bg-[#0d1117] overflow-hidden font-mono text-xs shadow-[0_0_20px_rgba(239,68,68,0.2)]"
>
  <div
    class="bg-red-900/20 px-4 py-2 border-b border-red-500/30 text-red-400 font-bold flex justify-between items-center animate-pulse"
  >
    <span>âš  {title}</span>
    <span
      class="text-[10px] bg-red-500 text-black px-2 py-0.5 rounded font-bold"
      >{badge}</span
    >
  </div>
  <div class="p-6 space-y-3">
    <div class="flex gap-4">
      <span class="text-gray-500 w-32 uppercase tracking-wider">Target App</span
      >
      <span class="text-white font-bold">{app}</span>
    </div>
    <div class="flex gap-4">
      <span class="text-gray-500 w-32 uppercase tracking-wider">Status</span>
      <span class="text-red-400 font-bold">{status}</span>
    </div>
    <div class="flex gap-4">
      <span class="text-gray-500 w-32 uppercase tracking-wider">Impact</span>
      <span class="text-white font-bold bg-red-500/20 px-2 rounded"
        >{impact}</span
      >
    </div>
    <div class="flex gap-4">
      <span class="text-gray-500 w-32 uppercase tracking-wider"
        >Probable Cause</span
      >
      <span class="text-gray-300">{cause}</span>
    </div>
  </div>
</div>
