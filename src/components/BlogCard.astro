---
// BlogCard.astro
const { post, isLatest = false } = Astro.props;
---

<a
  href={`/blog/${post.slug}`}
  class="group relative block bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden hover:border-emerald-500/50 transition-all duration-300"
>
  <div
    class="absolute inset-0 bg-emerald-500/0 group-hover:bg-emerald-500/[0.03] transition-colors"
  >
  </div>

  <div class="p-5 flex gap-5 items-start">
    <div
      class="hidden sm:flex shrink-0 w-16 h-16 bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg border border-slate-700 items-center justify-center text-2xl group-hover:scale-105 transition-transform"
    >
      {post.data.emoji || "ðŸ“„"}
    </div>

    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2 flex-wrap">
        <span
          class="text-[10px] font-mono text-slate-500 uppercase tracking-wider"
        >
          {post.data.pubDate.toLocaleDateString("fr-FR")}
        </span>
        <span class="text-slate-700 text-[10px]">â€¢</span>
        <span
          class="text-[10px] font-mono text-slate-500 uppercase tracking-wider"
        >
          {post.data.readingTime || "5"} MIN DE LECTURE
        </span>
        {
          isLatest && (
            <span class="text-[9px] font-bold bg-emerald-500/10 text-emerald-500 px-2 py-0.5 rounded border border-emerald-500/20">
              DERNIER ARTICLE
            </span>
          )
        }
      </div>

      <h3
        class="text-lg font-bold text-white mb-2 group-hover:text-emerald-400 transition-colors italic"
      >
        {post.data.title}
      </h3>

      <p class="text-slate-400 text-sm line-clamp-2 leading-relaxed mb-4">
        {post.data.description}
      </p>

      <span
        class="text-emerald-500 text-xs font-bold flex items-center gap-1 group-hover:gap-2 transition-all"
      >
        Lire l'article <span class="text-sm">â†’</span>
      </span>
    </div>
  </div>
</a>
