---
// Import des composants React
import FleetDashboard from "../components/react/FleetDashboard.tsx";
import LiveTerminal from "../components/react/LiveTerminal.tsx";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const stack = [
  {
    category: "ORCHESTRATION",
    color: "text-[#00D9A3]", // Vert
    items: [
      { name: "Talos Linux", url: "https://www.talos.dev/" },
      { name: "Kubernetes", url: "https://kubernetes.io/docs/home/" },
      { name: "GitOps (Flux)", url: "https://fluxcd.io/" },
      { name: "Helm", url: "https://helm.sh/docs/" },
      { name: "Kustomize", url: "https://kustomize.io/" },
    ],
  },
  {
    category: "NETWORK",
    color: "text-yellow-500", // Jaune
    items: [
      { name: "Cilium (eBPF)", url: "https://cilium.io/" },
      { name: "Traefik Proxy", url: "https://doc.traefik.io/traefik/" },
      { name: "Cert-Manager", url: "https://cert-manager.io/docs/" },
      {
        name: "Network Policies",
        url: "https://kubernetes.io/docs/concepts/services-networking/network-policies/",
      },
    ],
  },
  {
    category: "OBSERVABILITY",
    color: "text-blue-500", // Bleu
    items: [
      {
        name: "Prometheus",
        url: "https://prometheus.io/docs/introduction/overview/",
      },
      { name: "Grafana", url: "https://grafana.com/docs/" },
      { name: "Loki", url: "https://grafana.com/docs/loki/latest/" },
      {
        name: "Local Path CSI",
        url: "https://github.com/rancher/local-path-provisioner",
      },
      { name: "Velero", url: "https://velero.io/docs/" },
    ],
  },
];
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Pypnetty | Platform Engineer & Resilience Architect</title>
    <meta
      name="description"
      content="Portfolio de Pypnetty - Platform Engineer spécialisé Talos Linux et Kubernetes."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-[#111111] text-white selection:bg-[#00D9A3] selection:text-black font-sans antialiased"
  >
    <nav
      class="fixed w-full z-50 border-b border-gray-800/50 bg-[#050608]/80 backdrop-blur-md"
    >
      <div
        class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between"
      >
        <a
          href="/"
          class="font-bold text-xl tracking-tight flex items-center gap-2 group"
        >
          <div
            class="w-8 h-8 bg-[#00D9A3] group-hover:bg-white transition-colors rounded-sm flex items-center justify-center text-black font-mono font-bold"
          >
            P
          </div>
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-[#00D9A3] to-blue-600"
            >Pypnetty</span
          >
        </a>
        <div class="flex gap-6 text-xs font-mono text-gray-400">
          <span class="text-[#00D9A3] pointer-events-none">[*] Home</span>
          <a href="/projects" class="hover:text-white transition-colors"
            >[./] Projets</a
          >
          <a href="/blog" class="hover:text-white transition-colors"
            >[~/] Blog</a
          >
          <a href="/about" class="hover:text-white transition-colors"
            >[?] Profile</a
          >
        </div>
      </div>
    </nav>

    <section class="py-20 md:py-32 px-4 max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6">
          Platform Engineer.<br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-[#00D9A3] to-blue-500"
          >
            Resilience Architect.
          </span>
        </h1>
        <p class="text-xl text-gray-400 leading-relaxed mb-8 max-w-2xl">
          Je construis des produits Cloud Native en Go et partage mon parcours
          dans le développement de solutions bare-metal.
        </p>
        <div class="flex gap-4">
          <a
            href="/blog"
            class="px-6 py-3 bg-[#00D9A3] text-black font-bold rounded hover:bg-[#00c090] transition-colors flex items-center gap-2"
          >
            Lire le blog <span>→</span>
          </a>
          <a
            href="/projects"
            class="px-6 py-3 border border-gray-700 rounded hover:border-gray-500 transition-colors"
          >
            Voir mes projets
          </a>
        </div>
      </div>
    </section>

    <section class="py-20 bg-[#161b22] border-y border-gray-800">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="space-y-8">
            <div>
              <h2
                class="text-[#00D9A3] font-mono text-sm font-bold tracking-widest uppercase mb-2"
              >
                /// Live Operations
              </h2>
              <h3 class="text-4xl font-bold text-white mb-4">
                Infrastructure Fleet
              </h3>
              <p class="text-gray-400 text-lg leading-relaxed">
                Pilotage d'une infrastructure hybride distribuée sous <span
                  class="text-white font-medium">Talos Linux</span
                >.
              </p>
              <p class="text-gray-400 mt-4 leading-relaxed">
                L'approche n'est plus de gérer des serveurs, mais d'orchestrer
                la résilience. Mes clusters <span
                  class="font-mono text-white bg-gray-800 px-1 rounded"
                  >CORE-01</span
                > (Prod) et <span
                  class="font-mono text-white bg-gray-800 px-1 rounded"
                  >R&D-UNIT</span
                > (Lab) sont gérés comme des ressources éphémères via GitOps.
              </p>
            </div>

            <div
              class="p-4 bg-gray-900 border-l-2 border-[#00D9A3] rounded-r-lg"
            >
              <p class="text-gray-300 italic text-sm">
                "Le YAML ne suffit pas. Pour atteindre une vraie autonomie,
                l'intelligence doit descendre dans le cluster. J'écris mes
                propres contrôleurs Kubernetes (Go/eBPF) pour automatiser ce que
                le Cloud ne fait pas."
              </p>
            </div>
          </div>

          <div class="relative group">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-[#00D9A3] to-blue-600 rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-1000"
            >
            </div>
            <FleetDashboard client:visible />
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 px-4 max-w-7xl mx-auto">
      <div class="flex items-center gap-2 mb-12">
        <span class="w-2 h-2 rounded-full bg-[#00D9A3]"></span>
        <h2 class="text-2xl font-bold">Core Tech Stack</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {
            stack.map((group) => (
              <div class="space-y-4">
                <h3
                  class={`font-bold text-sm tracking-widest uppercase ${group.color}`}
                >
                  {group.category}
                </h3>
                <div class="flex flex-col gap-3">
                  {group.items.map((tech) => (
                    <a
                      href={tech.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="group flex items-center justify-between p-3 rounded border border-gray-800 bg-[#0d1117] hover:border-gray-600 hover:bg-[#161b22] transition-all cursor-pointer"
                    >
                      <span class="text-gray-300 group-hover:text-white font-mono text-sm transition-colors">
                        {tech.name}
                      </span>

                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class={`opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 ${group.color}`}
                      >
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                        <polyline points="15 3 21 3 21 9" />
                        <line x1="10" y1="14" x2="21" y2="3" />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            ))
          }
        </div>

        <div class="h-full">
          <LiveTerminal client:visible />
        </div>
      </div>
    </section>
  </body>

  <Footer />
</html>
