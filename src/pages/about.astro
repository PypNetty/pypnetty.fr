---
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const experience = [
  {
    role: "Bachelor DevOps & Cloud (En cours)",
    company: "Cursus TSSR + Spécialisation",
    period: "2023 - 2026 (Objectif Diplôme)",
    desc: "Parcours intensif du système vers l'automatisation. Administration Linux avancée, puis focus Kubernetes/GitOps. Rôle actif de Mentor Technique pour les promotions junior (Peer Learning, revues de code et debugging collaboratif).",
    current: true,
  },
  {
    role: "Développeur Front-End (React Ecosystem)",
    company: "Formation & Projets",
    period: "2021 - 2023",
    desc: "Acquisition de la logique développeur. Création d'interfaces SPA avec React. Cette étape me permet aujourd'hui de comprendre les contraintes des développeurs pour mieux construire leurs plateformes.",
    current: false,
  },
  {
    role: "Développeur Web & Mobile",
    company: "Initiation & Bases",
    period: "2020 - 2021",
    desc: "Première plongée dans le code. Apprentissage des bases du web (HTML/CSS/JS) et du développement mobile. Découverte de la logique algorithmique.",
    current: false,
  },
];
const philosophy = [
  {
    title: "Dev + Ops DNA",
    desc: "Mon background en développement (React) me permet de parler le même langage que les devs, tandis que ma formation TSSR assure la robustesse de l'infra.",
  },
  {
    title: "Transmission",
    desc: "Enseigner est la meilleure façon d'apprendre. J'accompagne d'autres étudiants, ce qui m'oblige à maîtriser mes sujets sur le bout des doigts.",
  },
  {
    title: "Automate Everything",
    desc: "Je suis un fainéant intelligent. Si une tâche doit être faite plus de deux fois, j'écris un script ou un pipeline pour la gérer.",
  },
];
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Operator Profile | Pypnetty</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-[#050608] text-white selection:bg-[#00D9A3] selection:text-black font-sans antialiased relative overflow-x-hidden"
  >
    <div class="fixed inset-0 z-0 pointer-events-none">
      <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:40px_40px]"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#050608_100%)]"
      >
      </div>
    </div>

    <nav
      class="fixed w-full z-50 border-b border-gray-800/50 bg-[#0b0d11]/80 backdrop-blur-md"
    >
      <div
        class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between"
      >
        <a
          href="/"
          class="font-bold text-xl tracking-tight flex items-center gap-2 group"
        >
          <div
            class="w-8 h-8 bg-[#00D9A3] group-hover:bg-white transition-colors rounded-sm flex items-center justify-center text-black font-mono font-bold"
          >
            P
          </div>
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-[#00D9A3] to-blue-500"
            >Pypnetty</span
          >
        </a>
        <div class="flex gap-6 text-xs font-mono text-gray-400">
          <a href="/" class="hover:text-white transition-colors">[~] Home</a>
          <a href="/projects" class="hover:text-white transition-colors"
            >[./] Projets</a
          >
          <a href="/blog" class="hover:text-white transition-colors"
            >[~/] Logs</a
          >
          <span class="text-[#00D9A3] pointer-events-none">[?] Profile</span>
        </div>
      </div>
    </nav>

    <main class="relative z-10 pt-32 pb-20 max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-20 items-start">
        <div class="lg:col-span-1 relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-br from-[#00D9A3] to-blue-600 rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-500"
          >
          </div>
          <div
            class="relative bg-[#12161c] border border-gray-800 rounded-xl p-2 aspect-square flex items-center justify-center overflow-hidden"
          >
            <div
              class="w-full h-full bg-[#0d1117] rounded-lg flex flex-col items-center justify-center text-gray-600"
            >
              <svg
                width="64"
                height="64"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#00D9A3] mb-4"
              >
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span class="font-mono text-xs">/home/pypnetty/avatar.jpg</span>
            </div>
          </div>

          <div class="mt-4 grid grid-cols-2 gap-2">
            <div
              class="bg-[#12161c] border border-gray-800 p-3 rounded flex items-center gap-3"
            >
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#00D9A3] flex-shrink-0"
              >
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div class="flex flex-col">
                <span class="text-[10px] text-gray-500 uppercase">Location</span
                >
                <span class="text-xs font-bold">Orléans, FR</span>
              </div>
            </div>
            <div
              class="bg-[#12161c] border border-gray-800 p-3 rounded flex items-center gap-3"
            >
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-yellow-500 flex-shrink-0"
              >
                <path d="M22 10v6M2 10v6M12 2v20M12 2l-3 3M12 2l3 3"></path>
                <path d="m22 2-3 3"></path>
                <path d="m2 2 3 3"></path>
              </svg>
              <div class="flex flex-col">
                <span class="text-[10px] text-gray-500 uppercase">Status</span>
                <span class="text-xs font-bold">Student</span>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2">
          <div
            class="flex items-center gap-2 text-[#00D9A3] mb-4 font-mono text-sm"
          >
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="4 17 10 11 4 5"></polyline>
              <line x1="12" x2="20" y1="19" y2="19"></line>
            </svg>
            <span>$ whoami --verbose</span>
          </div>

          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">
            L'Étudiant derrière <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-[#00D9A3] to-blue-600"
              >l'Infrastructure.</span
            >
          </h1>

          <div
            class="prose prose-invert prose-lg text-gray-400 leading-relaxed space-y-4"
          >
            <p>
              Salut, je suis <strong class="text-white">Pypnetty</strong>. Mon
              parcours a commencé par simple curiosité : comprendre comment
              fonctionnent les machines qui font tourner notre monde numérique.
            </p>
            <p>
              Aujourd'hui, je suis en pleine <strong class="text-white"
                >formation vers le métier de Platform Engineer</strong
              >. Mon quotidien n'est pas encore de gérer des infrastructures
              critiques en production, mais de les simuler, de les comprendre,
              et d'apprendre à les maîtriser.
            </p>
            <p>
              Je crois que la meilleure façon d'apprendre est de faire (et
              parfois de casser). Ce portfolio documente mon voyage
              d'apprentissage, du simple script Bash aux clusters Kubernetes
              complexes.
            </p>
          </div>

          <div class="mt-8 flex flex-wrap gap-4">
            <a
              href="mailto:contact@pypnetty.dev"
              class="px-6 py-3 bg-[#00D9A3] text-black font-bold rounded hover:bg-white transition-colors flex items-center gap-2"
            >
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
              Me contacter
            </a>
            <a
              href="/blog"
              class="px-6 py-3 border border-gray-700 rounded hover:border-[#00D9A3] hover:text-[#00D9A3] transition-colors"
            >
              Voir ma progression
            </a>
          </div>
        </div>
      </div>

      <div class="mb-20">
        <h2
          class="text-2xl font-bold mb-8 flex items-center gap-3 border-b border-gray-800 pb-4"
        >
          <span class="text-[#00D9A3]">#</span> Learning Manifesto
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {
            philosophy.map((item, idx) => (
              <div class="bg-[#12161c] border border-gray-800 p-6 rounded-xl hover:border-[#00D9A3]/50 transition-colors group">
                <div class="w-10 h-10 bg-[#00D9A3]/10 rounded flex items-center justify-center mb-4 text-[#00D9A3] group-hover:scale-110 transition-transform">
                  {idx === 0 && (
                    <svg
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M22 12h-4l-3 9L9 3l-3 9H2" />
                    </svg>
                  )}
                  {idx === 1 && (
                    <svg
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z" />
                      <path d="M12 9v4" />
                      <path d="M12 17h.01" />
                    </svg>
                  )}
                  {idx === 2 && (
                    <svg
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                      <polyline points="14 2 14 8 20 8" />
                      <line x1="16" x2="8" y1="13" y2="13" />
                      <line x1="16" x2="8" y1="17" y2="17" />
                      <polyline points="10 9 9 9 8 9" />
                    </svg>
                  )}
                </div>
                <h3 class="text-lg font-bold text-white mb-2">{item.title}</h3>
                <p class="text-sm text-gray-400 leading-relaxed">{item.desc}</p>
              </div>
            ))
          }
        </div>
      </div>

      <div class="max-w-3xl mx-auto">
        <h2
          class="text-2xl font-bold mb-8 flex items-center gap-3 border-b border-gray-800 pb-4"
        >
          <span class="text-[#00D9A3]">$</span> git log --oneline --graph
        </h2>

        <div
          class="relative border-l-2 border-gray-800 ml-3 space-y-12 pl-8 py-2"
        >
          {
            experience.map((exp, idx) => (
              <div class="relative group">
                <span
                  class={`
                            absolute -left-[41px] top-1 w-5 h-5 rounded-full border-4 border-[#0b0d11] transition-colors
                            ${exp.current ? "bg-[#00D9A3] animate-pulse" : "bg-gray-700 group-hover:bg-[#00D9A3]"}
                        `}
                />

                <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-1">
                  <h3 class="text-xl font-bold text-white group-hover:text-[#00D9A3] transition-colors">
                    {exp.role}
                  </h3>
                  <span class="font-mono text-xs text-gray-500 bg-gray-900 px-2 py-1 rounded border border-gray-800">
                    {exp.period}
                  </span>
                </div>

                <div class="text-sm font-mono text-[#00D9A3] mb-3">
                  {exp.company}
                </div>

                <p class="text-gray-400 text-sm leading-relaxed max-w-xl">
                  {exp.desc}
                </p>
              </div>
            ))
          }

          <div class="relative">
            <span
              class="absolute -left-[41px] top-1 w-5 h-5 rounded-full border-4 border-[#0b0d11] bg-gray-800"
            ></span>
            <div class="text-gray-600 font-mono text-xs pt-1">
              Initial Commit (Hello World)
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
